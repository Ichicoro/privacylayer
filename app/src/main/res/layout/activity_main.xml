<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.privacylayer.app.MainActivity">

    <EditText
        android:id="@+id/inputBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/modeswitch"
        android:layout_toStartOf="@+id/actionButton"
        android:maxHeight="500dp" />

    <Switch
        android:id="@+id/modeswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/actionButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/keychainSpinner"
        android:layout_toStartOf="@+id/actionButton"
        android:checked="false"
        android:text="Encrypt  &lt;->  Decrypt" />

    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inputBox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/modeswitch"
        android:text="Encrypt" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actionButton"
        android:layout_toStartOf="@+id/shareButton"
        android:maxHeight="500px" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignTop="@+id/editText"
        android:layout_toEndOf="@+id/inputBox"
        android:text="SHARE" />

    <Spinner
        android:id="@+id/keychainSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/actionButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/addToKeystoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/shareButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Add to keystore" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addToKeystoreButton"
        android:layout_alignParentStart="false"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/newItemNameBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:hint="Name" />

        <EditText
            android:id="@+id/newItemKeyBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:hint="Encryption key" />
    </LinearLayout>


</RelativeLayout>
